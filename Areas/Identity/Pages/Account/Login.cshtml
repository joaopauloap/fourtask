@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="text-center mx-auto w-50">
    <section>
        <form id="account" method="post">
            <h3>Entre para acessar todos os recursos do FourTask.</h3>
            <hr class="mb-5" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox text-start mb-4">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <div class="mb-3">
                <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary">Entrar</button>
            </div>
            <div class="row">
                <div class="col">
                    <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                </div>
                <div class="col">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar novo usuário</a>
                </div>
            </div>
        </form>
    </section>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
