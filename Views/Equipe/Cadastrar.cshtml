@model Equipe

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar Equipe</h1>

<form asp-action="Cadastrar">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" required/>
    </div>
    <div class="mb-3">
        <label asp-for="Senha" class="form-label"></label>
        <input asp-for="Senha" type="password" class="form-control" required/>
    </div>
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control" required></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="AreaAtuacao" class="form-label"></label>
        <select asp-for="AreaAtuacao" class="form-select" asp-items="@Html.GetEnumSelectList<AreaAtuacao>()" required>
            <option>Selecione</option>
        </select>
    </div>
    <div class="mb-4">
        <label asp-for="DataCriacao" class="form-label"></label>
        <input asp-for="DataCriacao" class="form-control" required/>
    </div>
    <div class="mt-5">
        <input type="submit" class="btn btn-primary"/>
    </div>
</form>
