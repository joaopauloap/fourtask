@model Tarefa
@{
    ViewData["title"] = "Editar Tarefa";
}

<h1>
    Editar Tarefa @Model.TarefaId
    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalRemover">Remover</button>
</h1>

<div class="mt-3">
    <form asp-action="Editar">
        <partial name="_form" />
    </form>
</div>

<div class="modal fade" id="modalRemover">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Remover tarefa @Model.TarefaId</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Deseja realmente remover esta tarefa?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                <form asp-action="Remover">
                    <input type="hidden" Name="tarefaId" value="@Model.TarefaId" />
                    <confirmar></confirmar>
                </form>
            </div>
        </div>
    </div>
</div>