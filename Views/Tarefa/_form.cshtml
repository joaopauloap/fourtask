@model TarefaViewModel
<div class="mx-auto w-50">
        <input asp-for="Tarefa.TarefaId" type="hidden" />
        <div class="mb-3">
            <label asp-for="Tarefa.Titulo" class="form-label"></label>
            <input asp-for="Tarefa.Titulo" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Tarefa.Descricao" class="form-label"></label>
            <textarea asp-for="Tarefa.Descricao" class="form-control" required></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Equipe</label>
            <Select Name="equipeSelecionada" class="form-select" required>
                @{
                    if (Model.Tarefa?.Equipe == null)
                    {
                        <option value="">Selecionar equipe...</option>
                    }
                    else
                    {
                        <option value="@Model.Tarefa.Equipe.EquipeId">@Model.Tarefa.Equipe.Nome</option>
                    }

                    foreach (Equipe equipe in Model.ListaEquipes)
                    {
                        <option value="@equipe.EquipeId">@equipe.Nome</option>
                    }
                }
            </Select>
        </div>
        <div class="mb-4">
            <label asp-for="Tarefa.DataLimite" class="form-label"></label>
            <input asp-for="Tarefa.DataLimite" class="form-control" required />
        </div>
        <div>
            <confirmar></confirmar>
        </div>
</div>
